<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".core.core.dashboard.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

    <TextView
        style="@style/FormLabels"
        android:text="Username"/>

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        style="@style/Spinner"
        android:focusable="false"
        android:clickable="true"
        android:id="@+id/spTenants"/>

    <TextView
        style="@style/FormLabels"
        android:text="Tenant Name"/>

    <EditText
        style="@style/EditText"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/etNames"/>

    <TextView
        style="@style/FormLabels"
        android:text="Last  Reading"/>

    <EditText
        style="@style/EditText"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/etMeterReading"/>

    <TextView
        style="@style/FormLabels"
        android:text="Current Reading"/>

    <EditText
        style="@style/EditText"
        android:id="@+id/etCurrentReading"
        android:inputType="number"/>

    <Button
        style="@style/Button"
        android:id="@+id/btnSubmit"
        android:layout_marginBottom="10dp"
        android:text="submit"/>
    </LinearLayout>

</LinearLayout>