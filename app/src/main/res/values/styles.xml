<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/titilliumwebregular</item>
    </style>

    <style name="Button" parent="android:style/Widget.Button">
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:layout_height">@dimen/standard_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:minHeight">@dimen/standard_height</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/standard_margin_top</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="FormLabels" parent="android:Widget.TextView">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_label_text_size</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">center|left</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:layout_height">@dimen/standard_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
